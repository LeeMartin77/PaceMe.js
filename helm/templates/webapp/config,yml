kind: ConfigMap
apiVersion: v1
metadata:
  name: paceme-webapp
  labels:
    app: paceme
data:
  nginx_webapp.conf: |
    server {
      gzip on;
      gzip_comp_level 5;
      gzip_min_length 256;
      gzip_types
        image/bmp
        image/svg+xml
        text/css
        text/javascript
        text/plain
        text/vcard
        text/vnd.rim.location.xloc
        text/vtt
        text/x-component
        text/x-cross-domain-policy
        font/eot
        font/otf
        font/ttf
        application/javascript
        application/x-javascript
        application/json
        application/ld+json
        application/manifest+json
        application/rdf+xml
        application/vnd.ms-fontobject
        application/x-web-app-manifest+json;
      listen 80 default_server;
      listen [::]:80 default_server;
      root /usr/share/nginx/html;
      index index.html;
      server_name {{ required "hostname is required" .Values.hostname }};
      location / {
        try_files $uri $uri/ /index.html;
      }
    }